<!DOCTYPE html>
<html>
<head>
    <title>NikeCopy: @ViewBag.Title</title>
	<link href="~/css/site.css" rel="stylesheet" />
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header class="container">
        <h1>Welcome to NikeCopy</h1>
        <menu>
            <ul>
                <li><a asp-controller="App" asp-action="Index">Home</a></li>
                <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
                <li><a asp-controller="App" asp-action="About">About</a></li>
            </ul>
        </menu>
    </header>
    <section class="container">
        <h1>@ViewBag.Title</h1>
        @RenderBody()
    </section>
    <footer class="container">
        <div class="text-center">Copyright 2022</div>
    </footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/index.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>